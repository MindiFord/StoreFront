@model StoreFront.DATA.EF.Product

@{
    ViewBag.Title = "Product Details";
}

@Html.Partial("_BreadcrumbPartial")

<div>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Image)
        </dt>

        <dd>
            <img src="~/Content/img/product/@Model.Image" alt="@Model.ProductName" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProductDesc)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductDesc)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UnitPrice)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UnitPrice)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PricePer.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PricePer.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status.Description)
        </dd>

        <dt>
            <label>Quantity: </label>
        </dt>
        <dd>
            @using (Html.BeginForm("AddToCart", "Products", new { productID = Model.ProductID }, FormMethod.Post))
            {
                // Use a hiddenFor() to pass the ProductID
                @Html.HiddenFor(x => x.ProductID)

                @Html.TextBox("Qty", 1, new { @class = "form-control", @style = "max-width:75px; display:inline;" })
                <input type="submit" value="Add to Cart" class="btn site-btn" name="qty" />
            }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ProductID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
